{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Backend",
    "extends": "./base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "target": "esNEXT",
        "outDir": "dist",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext"
        ]
    },
    "exclude": [
        "**/dist"
    ]
}